  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "mongoose": "^5.9.22",
    "multer": "^1.4.2",
    "unique-string": "^2.0.0"
  }
}
